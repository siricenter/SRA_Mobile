<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chad.sra_mobile" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MyActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login"
            android:label="@string/title_activity_login" >
        </activity>

        <meta-data
            android:name="AA_DB_NAME"
            android:value="sra.db" />

        <activity
            android:name=".DashBoard"
            android:label="@string/title_activity_dash_board"
            android:screenOrientation="landscape" > <!-- locked until we set orientation change listeners -->
        </activity>
        <activity
            android:name=".InterviewActivity"
            android:label="@string/title_activity_interview" >
        </activity>
        <activity
            android:name=".CreateQuestionSet"
            android:label="@string/title_activity_create_question_set" >
        </activity>
        <activity
            android:name=".CreateOrEditQuestion"
            android:label="@string/title_activity_create_or_edit_question" >
        </activity>
        <activity
            android:name=".QuestionSetList"
            android:label="@string/title_activity_question_set_list" >
        </activity>
    </application>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>
