<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:background="@color/DefaultBackgroundColor"
    android:id="@+id/question_set_list">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/frag4_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_help"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/frag4_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nav Text"
            android:layout_toEndOf="@+id/frag4_icon"
            android:layout_alignBottom="@+id/frag4_icon"
            android:layout_toRightOf="@+id/frag4_icon" />

        <TableLayout
            android:id="@+id/question_set_table"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
        </TableLayout>

        <Button
            android:id="@+id/add_question_set_button"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="Add question set" />

    </LinearLayout>
</ScrollView>