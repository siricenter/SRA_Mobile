<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#efe"
    tools:context="com.example.chad.sra_mobile.DashBoard">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Interviews"
        android:layout_marginTop="83dp"
        android:background="#fff"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dashboard">
    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/areaSpinner"
        android:background="#fff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="+ Area"
        android:id="@+id/button3"
        android:layout_alignBottom="@+id/areaSpinner"
        android:layout_toEndOf="@+id/areaSpinner"
        android:layout_toRightOf="@+id/areaSpinner"
        android:layout_alignParentTop="true"
        android:onClick="createArea"
        android:maxWidth="150dp"
        android:textSize="12dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="+ Family"
        android:id="@+id/button"
        android:layout_alignBottom="@+id/areaSpinner"
        android:layout_toEndOf="@+id/areaSpinner"
        android:layout_toRightOf="@+id/areaSpinner"
        android:layout_alignParentTop="true"
        android:maxWidth="150dp"
        android:onClick="addHousehold"
        android:textSize="12dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:maxWidth="150dp"
        android:text="Sync"
        android:id="@+id/button2"
        android:layout_toEndOf="@+id/button"
        android:onClick="syncDatabase"
        android:layout_alignBottom="@+id/button"
        android:layout_alignTop="@+id/button"
        android:textSize="12dp"
        android:layout_alignRight="@+id/Interviews"
        android:layout_alignEnd="@+id/Interviews" />
</LinearLayout>

</RelativeLayout>